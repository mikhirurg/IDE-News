<idea-plugin>
    <id>io.github.intellijnews</id>
    <name>IntelliJNews</name>
    <vendor>mikhirurg</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="IntelliJNews"
                    anchor="right"
                    icon="AllIcons.Toolwindows.WebToolWindow"
                    factoryClass="io.github.intellijnews.plugin.ApplicationWindowFactory"/>
    </extensions>

</idea-plugin>
